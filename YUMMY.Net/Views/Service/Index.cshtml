@model List<YUMMY.Net.Models.Service> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis/Hizmet Alanı</h2>

<table class="table table-bordered">
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Güncelleme</th>
    </tr>

    @foreach (var item in Model)
            {

        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Service/Update/@item.ServiceId" class="btn btn-info">güncelle</a></td>

        </tr>
            }


</table>    