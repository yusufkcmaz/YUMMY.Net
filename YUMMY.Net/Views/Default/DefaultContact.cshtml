@model List<YUMMY.Net.Models.ContactInfo>
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p><span></span> <span class="description-title">Bize Buradan Ulaşabilirsiniz</span></p>
    </div>
    <!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        @foreach (var item in Model)
        {


            <div class="mb-5">
                <iframe style="width: 100%; height: 400px;" src="@item.MapUrld  " frameborder="0" allowfullscreen=""></iframe>
            </div><!-- End Google Maps -->

            <div class="row gy-4">

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="200">
                        <i class="icon bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Addres</h3>
                            <p>@item.ADDRESS</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="300">
                        <i class="icon bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Telefon</h3>
                            <p> @item.PhoneNumber</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="400">
                        <i class="icon bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Mail</h3>
                            <p>@item.Email</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center" data-aos="fade-up" data-aos-delay="500">
                        <i class="icon bi bi-clock flex-shrink-0"></i>
                        <div>
                            <h3>Çalışma Saatlerimiz<br></h3>
                            <p><strong>Pazertersi-Pazar:</strong>@item.OpenHours; <strong></strong></p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

            </div>

            @Html.Action("DefaultMessage" , "Default")
            <!-- End Contact Form -->
        }
    </div>

</section>