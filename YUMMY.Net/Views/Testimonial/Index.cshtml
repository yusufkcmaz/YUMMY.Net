@model List<YUMMY.Net.Models.Testimonial> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Testimonial Alanı</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>isim soyisim</th>
        <th>meslek</th>
        <th>yorum</th>
        <th>derece</th>
        <th>Sil</th>
        @*<th>Güncelle</th>*@
    </tr>


    @foreach (var item in Model)
    {

        <tr>
            <th>@item.TestimonialId</th>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" />   </td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Commend</td>
            <td>@item.Rating</td>

            <td><a href="~/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a> </td>
            @*<td><a href="#" class="btn btn-info">Güncelle</a> </td>*@
        </tr>
    }

</table>
<br />
<a href="~/Testimonial/AddTestimonial" class="btn btn-primary">Yeni testimonial Ekle</a>