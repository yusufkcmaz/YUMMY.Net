﻿@model List<YUMMY.Net.Models.Chef>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Şefler </h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>İsim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {

        <tr>
            <th>@item.ChefId </th>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" />   </td>
            <th>@item.Name </th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="~/Chefs/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a> </td>
            <td><a href="~/Chefs/UpdateChef/@item.ChefId" class="btn btn-info">Güncelle</a> </td>
        </tr>
    }

</table>
<br />
<a href="~/Chefs/AddChef/" class="btn btn-primary">Yeni Şef Ekle</a>



