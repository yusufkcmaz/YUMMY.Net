@model YUMMY.Net.Models.Message
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesajların Detayı</h2>

<form method="post">

    <label>Gönderen İsim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Mesaj Konusu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />


    <label>Mesajı</label>
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
    <br />

</form>

<a href="@Url.Action("Index", "Message")" class="btn btn-primary">Geri Dön</a>